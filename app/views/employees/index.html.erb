<div class="container">
    <h1>Employee List</h1>
    <table>
        <tr>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
        <% @employees.each do |employee| %>
            <tr>
                <td><%= employee.first_name %></td>
                <td><%= employee.middle_name %></td>
                <td><%= employee.last_name %></td>
                <td class="actions"><%= link_to "Show", show_employee_path(:id => employee.id) %> | <%= link_to "Edit", edit_employee_path(:id => employee.id) %> | <%= link_to "Delete", delete_employee_path(:id => employee.id), data: {confirm: "Are you sure?"}  , :method => :delete %></td>
            </tr>
        <% end %>
    </table>
    <%= link_to "Add an employee", new_employee_path%>
</div>